@using FilmBookmarkService.Core

@model List<Film>

@{
    ViewBag.Title = "Your Films.";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-10">
        
        <div class="films">
            @foreach (var film in Model)
            {
                <div class="film clearfix" id="@film.Id">

                    <div class="film-view">
                        <div class="sort"><img src="~/Content/images/grippy_large.png" /></div>
                        
                        <div class="film-part cover"><img src="@film.CoverUrl" /></div>
                        <div class="film-part">
                            <div class="film-part url"><a href="@film.Url" target="_blank">@film.Name</a></div>
                            <div class="film-part indicator" style="display: none"></div>
                            <div class="film-part button edit-button"><span class="glyphicon glyphicon-pencil"></span></div>

                            <div class="clearfix"></div>
                            <div class="film-part stream"><img src="~/Content/images/ajax-loader.gif"/></div>

                            <div class="clearfix"></div>
                            <div>
                                <div class="film-part prev-episode-button"><a href="#">&lt;&nbsp; Prev</a></div>
                                <div class="film-part reload-link-button"><a href="#">&nbsp;Reload Link&nbsp;</a></div>
                                <div class="film-part next-episode-button"><a href="#">Next &nbsp;&gt;</a></div>
                            </div>
                        </div>
                    </div>

                    <div class="film-editor" style="display: none">
                        <input class="edit-film-name film-part-edit form-control width-m" type="text" name="name" placeholder="Name" value="@film.Name" />
                        <input class="edit-url film-part-edit form-control width-m" type="text" name="name" placeholder="Url" value="@film.Url" />
                        <input class="edit-season film-part-edit form-control width-s" type="text" name="name" placeholder="Season" value="@film.Season" />
                        <input class="edit-episode film-part-edit form-control width-s" type="text" name="name" placeholder="Episode" value="@film.Episode" />

                        <a class="film-part btn btn-success save-button" href="#"><span class="glyphicon glyphicon-floppy-disk"></span><span> Save</span></a>
                        <a class="film-part btn btn-danger remove-button" href="#"><span class="glyphicon glyphicon-trash"></span><span> Remove</span></a>
                        <a class="film-part cancel-button" href="#">Cancel</a>
                    </div>
                </div>
            }
        </div>

        <div class="add-film">
            <h4>Add new film:</h4>
            <div class="clearfix">
                <input id="new-film-name" class="film-part-edit form-control width-m" type="text" name="name" placeholder="Name" />
                <input id="new-url" class="film-part-edit form-control width-m" type="text" name="name" placeholder="Url" />
                <input id="new-season" class="film-part-edit form-control width-s" type="text" name="name" placeholder="Season" />
                <input id="new-episode" class="film-part-edit form-control width-s" type="text" name="name" placeholder="Episode" />

                <a id="add-button" class="film-part btn btn-primary" href="#"><span class="glyphicon glyphicon-plus"></span><span> Add</span></a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/fbs")

    @if (Model != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                initializeFilmHandler({
                    addFilmUrl: "@Url.Action("AddFilm")",
                    editFilmUrl: "@Url.Action("EditFilm")",
                    removeFilmUrl: "@Url.Action("RemoveFilm")",
                    getStreamUrl: "@Url.Action("GetStream")",
                    nextEpisodeUrl: "@Url.Action("NextEpisode")",
                    prevEpisodeUrl: "@Url.Action("PrevEpisode")",
                    isAnotherEpisodeAvailableUrl: "@Url.Action("IsAnotherEpisodeAvailable")",
                    updateSortOrderUrl: "@Url.Action("UpdateSortOrder")"
                });
            });
        </script>
    }
}